{
    "testcase": "5n4pr_conf_10k_bintree_config",
    "description": "Publish 10k send+open blocks to all 4PRs",
    "docker_tags": [
        "nanocurrency/nano:V26.1"
    ],
    "global": {
        "BLOCK_PATH": "_resources/blocks/5n4pr_100k_bintree_short.json",
        "LEDGER_PATH": "_resources/ledgers/5n4pr_init_v24.ldb",
        "NL_CONFIG_PATH": "_resources/configs/nanomock/5n4pr_default.toml",
        "CPU_PER_NODE": 0.3
    },
    "commands": [
        {
            "type": "snippet",
            "key": "nanomock_reset_copy_ledger_create",
            "variables": {
                "NL_CONFIG": "{NL_CONFIG_PATH}",
                "REMOTE_IP": "172.17.0.1",
                "SETUP_NODES": "nl_genesis nl_pr1 nl_pr2 nl_pr3 nl_pr4",
                "LEDGER": "{LEDGER_PATH}"
            }
        },
        {
            "type": "snippet",
            "key": "nanomock_conf_edit_create",
            "variables": {
                "PATH": "representatives.cpu",
                "VALUE": "{CPU_PER_NODE}"
            }
        },
        {
            "type": "snippet",
            "key": "nanomock_start_init"
        },
        {
            "type": "threaded",
            "commands": [
                {
                    "type": "python",
                    "class": "NodeInteraction",
                    "method": "start_logger",
                    "delay": -0.1,
                    "variables": {
                        "logger_params": {
                            "type": "rpc",
                            "timeout": 120,
                            "expected_blocks_count": 10000,
                            "included_peers": [
                                "nl_pr1"
                            ]
                        },
                        "sink_params": [
                            {
                                "type": "console"
                            }
                        ]
                    }
                },
                {
                    "type": "python",
                    "method": "publish_blocks",
                    "variables": {
                        "publish_params": {
                            "blocks_path": "{BLOCK_PATH}",
                            "bps": 300,
                            "subset": {
                                "start_index": 0,
                                "end_index": 6000
                            }
                        }
                    },
                    "class": "NodeInteraction"
                },
                {
                    "type": "python",
                    "method": "publish_blocks",
                    "delay": 15,
                    "variables": {
                        "publish_params": {
                            "blocks_path": "{BLOCK_PATH}",
                            "bps": 300,
                            "subset": {
                                "start_index": 5000,
                                "end_index": 10000
                            }
                        }
                    },
                    "class": "NodeInteraction"
                },
                {
                    "type": "python",
                    "method": "publish_blocks",
                    "delay": 40,
                    "variables": {
                        "publish_params": {
                            "blocks_path": "{BLOCK_PATH}",
                            "bps": 1000,
                            "subset": {
                                "start_index": 0,
                                "end_index": 10000
                            }
                        }
                    },
                    "class": "NodeInteraction"
                }
            ]
        }
    ]
}